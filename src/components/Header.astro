---
import type { WebsiteContext } from "../types";

export type Props = {
  id?: string;
  website: WebsiteContext;
};

const { id = "ipTTowerOfBabel0", website } = Astro.props;
---

<header class="h-11 px-2">
  <a
    href={import.meta.env.BASE_URL}
    class="font-title text-menu-foreground dark:text-menu-foreground-dark flex gap-2"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 48 48"
      ><defs
        ><mask id={id}
          ><g fill="none" stroke="#fff" stroke-linejoin="round" stroke-width="4"
            ><path d="M20 14.5V4h8v9.5M14 25v-9.538L34 13v10M11 35v-9l26-3v9"
            ></path><path fill="#555555" d="M40 44H8v-8l32-4z"></path></g
          ></mask
        ></defs
      ><path fill="currentColor" d="M0 0h48v48H0z" mask={`url(#${id})`}
      ></path></svg
    >
    {website.title}
    <span class="text-background-dark dark:text-background text-xs">
      v{website.version}
    </span>
  </a>
</header>
